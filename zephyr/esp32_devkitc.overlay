/ {
    aliases {
        led0 = &my_led_0;
        led1 = &my_led_1;
    };
};

&gpio_0 {
    status = "okay";

    my_led_0: led_0 {
        gpios = <2 GPIO_ACTIVE_LOW>; /* GPIO 2 (LED Padrao do ESP32), Ativo Baixo */
        label = "LED_0";
    };

    my_led_1: led_1 {
        gpios = <23 GPIO_ACTIVE_LOW>; /* GPIO 23 (Exemplo), Ativo Baixo */
        label = "LED_1";
    };
};